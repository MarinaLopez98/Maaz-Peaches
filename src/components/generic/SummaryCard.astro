---
import { Card } from '@eliancodes/brutal-ui';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  imgSrc: ImageMetadata;
  imgSrcHover?: ImageMetadata;
  imgAlt: string;
  description: string;
}

const { title, imgAlt, imgSrc, imgSrcHover, description } = Astro.props;
---

<Card color='#8b6dca'>
  <h3 class='poppins text-lg md:text-xl'>{title}</h3>
  <div class='rounded-lg border-3 border-black my-4 image-swap-container'>
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={800}
      height={400}
      class='rounded w-full h-full object-cover image-front'
    />
    {imgSrcHover && (
      <Image
        src={imgSrcHover}
        alt={imgAlt}
        width={800}
        height={400}
        class='rounded w-full h-full object-cover image-back'
      />
    )}
  </div>
  <p class='poppins'>{description}</p>
  <slot />
</Card>

<style>
  .image-swap-container {
    position: relative;
    overflow: hidden;
    height: 20rem;
    cursor: pointer;
  }
  
  .image-front, .image-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.4s ease-in-out;
  }
  
  .image-back {
    opacity: 0;
  }
  
  .image-swap-container:hover .image-front {
    opacity: 0;
  }
  
  .image-swap-container:hover .image-back {
    opacity: 1;
  }
</style>