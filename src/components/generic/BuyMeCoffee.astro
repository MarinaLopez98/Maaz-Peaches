---
interface Props {
  username?: string;
}

const { username = 'rollingpeaches' } = Astro.props;
---

<div class="kofi-container">
  <div class="kofi-card">
    <p class="kofi-message">Si disfrutaste este contenido ✨</p>
    <a 
      href={`https://ko-fi.com/${username}`} 
      target="_blank"
      rel="noopener noreferrer"
      class="kofi-button"
    >
      <svg class="kofi-icon" viewBox="0 0 24 24" fill="currentColor">
        <path d="M23.881 8.948c-.773-4.085-4.859-4.593-4.859-4.593H.723c-.604 0-.679.798-.679.798s-.082 7.324-.022 11.822c.164 2.424 2.586 2.672 2.586 2.672s8.267-.023 11.966-.049c2.438-.426 2.683-2.566 2.658-3.734 4.352.24 7.422-2.831 6.649-6.916zm-11.062 3.511c-1.246 1.453-4.011 3.976-4.011 3.976s-.121.119-.31.023c-.076-.057-.108-.09-.108-.09-.443-.441-3.368-3.049-4.034-3.954-.709-.965-1.041-2.7-.091-3.71.951-1.01 3.005-1.086 4.363.407 0 0 1.565-1.782 3.468-.963 1.904.82 1.832 3.011.723 4.311zm6.173.478c-.928.116-1.682.028-1.682.028V7.284h1.77s1.971.551 1.971 2.638c0 1.913-.985 2.667-2.059 3.015z"/>
      </svg>
      <span class="kofi-text">Apóyame en Ko-fi</span>
    </a>
  </div>
</div>

<style>
  .kofi-container {
    display: flex;
    justify-content: center;
    margin: 2.5rem 0;
  }
  
  .kofi-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #fdfbfb 0%, #f7f3f8 100%);
    border: 2px solid #e8d5e8;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(139, 109, 202, 0.1);
  }
  
  .kofi-message {
    margin: 0;
    color: #6b5b75;
    font-family: 'Poppins', sans-serif;
    font-size: 0.95rem;
    font-weight: 500;
    text-align: center;
  }
  
  .kofi-button {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #8b6dca 0%, #a78bcc 100%);
    color: #ffffff;
    border: 2px solid #7a5bb8;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(139, 109, 202, 0.3);
  }
  
  .kofi-button:hover {
    background: linear-gradient(135deg, #7a5bb8 0%, #8b6dca 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 109, 202, 0.4);
  }
  
  .kofi-icon {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  .kofi-text {
    font-size: 1rem;
  }
</style>
