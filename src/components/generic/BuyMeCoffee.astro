---
interface Props {
  username?: string;
}

const { username = 'rollingpeaches' } = Astro.props;
---

<div class="kofi-container">
  <div class="kofi-card">
    <p class="kofi-message">Si disfrutaste este contenido ✨</p>
    <a 
      href={`https://ko-fi.com/${username}`} 
      target="_blank"
      rel="noopener noreferrer"
      class="kofi-button"
    >
      <span class="kofi-emoji">☕</span>
      <span class="kofi-text">Apóyame en Ko-fi</span>
    </a>
  </div>
</div>

<style>
  .kofi-container {
    display: flex;
    justify-content: center;
    margin: 2.5rem 0;
  }
  
  .kofi-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #fdfbfb 0%, #f7f3f8 100%);
    border: 2px solid #e8d5e8;
    border-radius: 1rem;
    box-shadow: 0 4px 6px rgba(139, 109, 202, 0.1);
  }
  
  .kofi-message {
    margin: 0;
    color: #6b5b75;
    font-family: 'Poppins', sans-serif;
    font-size: 0.95rem;
    font-weight: 500;
    text-align: center;
  }
  
  .kofi-button {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, #8b6dca 0%, #a78bcc 100%);
    color: #ffffff;
    border: 2px solid #7a5bb8;
    border-radius: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(139, 109, 202, 0.3);
  }
  
  .kofi-button:hover {
    background: linear-gradient(135deg, #7a5bb8 0%, #8b6dca 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(139, 109, 202, 0.4);
  }
  
  .kofi-emoji {
    font-size: 1.5rem;
    line-height: 1;
  }
  
  .kofi-text {
    font-size: 1rem;
  }
</style>
